{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@screens": ["./screens"],
      "@screens/*": ["./screens/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@firebase": ["./firebase"],
      "@firebase/*": ["./firebase/*"],
      "@config": ["./config"],
      "@config/*": ["./config/*"],
      "@context": ["./context"],
      "@context/*": ["./context/*"],
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
    }
  },
}
